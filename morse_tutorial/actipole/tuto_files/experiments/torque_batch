points=points.txt
interactions=interactions.txt
method=bind
file=deroulement.txt
solver=hmat
ext=txt
if [ "$p" != "" ]; then
    points="$p"
fi
if [ "$inter" != "" ]; then
    interactions="$inter"
fi
if [ "$m" != "" ]; then
    method="$m"
fi
if [ "$f" != "" ]; then
    file="$f"
fi
if [ "$s" != "" ]; then
    solver="$s"
fi
if [ "$o" != "" ]; then
    options="$o"
fi
if [ "$e" != "" ]; then
    ext="$e"
fi

./$HOME/run_$s.sh "$points" "$interactions" "$method" "$file" "$ext" "$options"